#include<stdio.h>
int main(){
	int n;
	scanf("%d",&n);
	int n1=(n+1)/2;
	int n2=(n-1)/2;
	for(int i=1;i<=n1;i++){
		for(int j=1;j<=n1-i;j++){
			printf(" ");
		}
		for(int j=1;j<=2*i-1;j++){
			printf("*");
		}
		printf("\n");
	}
	for(int i=1;i<=n2;i++){
		for(int j=1;j<=n2;j++){
			printf(" ");
		}
		printf("*\n");
	}
	return 0;
}
